importas CMD 1
shift
elgetpositionals

emptyenv s6-envdir /etc/anopa/env exec

# Set up a pipe to log messages
piperw 3 4
background
{
    fdclose 4 fdmove 0 3
    redirfd -a 1 /var/log/boot/current
    fdmove -c 2 1
    s6-tai64n
}
fdclose 3
fdmove 2 4

# log what we do
foreground
{
    fdmove -c 1 2
    aa-echo -B -- "Running: aa-${CMD}" " ${@}"
}

aa-${CMD} -D ${@}
